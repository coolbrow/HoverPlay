{
    "name": "Audiomatic",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Easier interaction with audio links on the web.",
    "background" : {
      "scripts": ["bg.js"]
    },
    "options_page": "options/options.html",
    "icons": {
      "48" : "icons/audiomatic48.png",
      "128" : "icons/audiomatic128.png"
    },
    "content_scripts" : [
      {
        "matches" : [
          "http://*/*"
        ],
        "js" : [
          "contentscript.js"
        ]
      }
    ]
}
